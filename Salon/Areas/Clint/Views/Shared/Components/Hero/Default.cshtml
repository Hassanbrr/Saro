@model List<Domain.Models.Website.HeroSection>

<section id="carousel">
	<div id="salonCarousel" class="carousel slide" data-bs-ride="carousel">
		<!-- Indicators -->
		<div class="carousel-indicators">
			@for (int i = 0; i < Model.Count; i++)
			{
				<button type="button" data-bs-target="#salonCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-label="Slide @(i+1)"></button>
			}
		</div>

		<!-- Slides -->
		<div class="carousel-inner">
			@foreach (var hero in Model)
			{
				<div class="carousel-item @(hero == Model.First() ? "active" : "")">
					<img src="@hero.ImageUrl" class="d-block w-100" alt="@hero.Title" style="height: 87vh; object-fit:cover;">
					<div class="carousel-caption d-none">
						<h5>@hero.Title</h5>
						<p>@hero.Subtitle</p>
					</div>
				</div>
			}
		</div>

		<!-- Controls -->
		<button class="carousel-control-prev" type="button" data-bs-target="#salonCarousel" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#salonCarousel" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>
</section>