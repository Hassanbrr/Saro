<section id="carousel">
	<div id="salonCarousel" class="carousel slide" data-bs-ride="carousel">
		<!-- Indicators -->
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#salonCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#salonCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#salonCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
		</div>

		<!-- Slides -->
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="~/Clint/images/Hero-1.jpg" class="d-block w-100" alt="Salon Image 1" style="height: 80vh; object-fit: cover;">
			 
				<div class="carousel-caption d-none ">
					<h5>سالن زیبایی حرفه‌ای</h5>
					<p>فضای عالی برای خدمات شما.</p>
				</div>
			</div>
			<div class="carousel-item">
				<img src="~/Clint/images/Hero-2.jpg" class="d-block w-100" alt="Salon Image 2" style="height: 80vh; object-fit: cover;">
			 
				<div class="carousel-caption d-none ">
					<h5>خدمات فوق‌العاده</h5>
					<p>با کیفیتی بی‌نظیر.</p>
				</div>
			</div>
			<div class="carousel-item">
				<img src="~/Clint/images/Hero-3.jpg" class="d-block w-100" alt="Salon Image 3" style="height: 80vh; object-fit: cover;">
			 
				<div class="carousel-caption d-none ">
					<h5>فضای آرامش‌بخش</h5>
					<p>مکانی برای زیبایی و آرامش.</p>
				</div>
			</div>
		</div>

		<!-- Controls -->
		<button class="carousel-control-prev" type="button" data-bs-target="#salonCarousel" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#salonCarousel" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>
</section>
<section class="features py-5">
	<div class="container">
		<div class="row">
			<div class="col-md-12 text-center" data-aos="fade-in" data-aos-delay="0">
				<div class="py-5">
					<svg width="38" height="38" viewBox="0 0 24 24">
						<use xlink:href="#calendar"></use>
					</svg>
					<h4 class="element-title text-capitalize my-3">Book An Appointment</h4>
					<p>At imperdiet dui accumsan sit amet nulla risus est ultricies quis.</p>
				</div>
			</div> 
		</div>
	</div>
</section>

@await Component.InvokeAsync("Services")
